{% extends '_layout/app.html.twig' %}

{% block title %}{{ task.title }} - TaskManager{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_task_index') }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour aux tâches
        </a>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-start">
            <div>
                <h1 class="text-xl font-semibold text-gray-900 {% if task.status.value == 'done' %}line-through text-gray-500{% endif %}">
                    {{ task.title }}
                </h1>
                <div class="mt-2 flex items-center space-x-3">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        {% if task.status.value == 'done' %}bg-green-100 text-green-800
                        {% elseif task.status.value == 'in_progress' %}bg-blue-100 text-blue-800
                        {% elseif task.status.value == 'cancelled' %}bg-red-100 text-red-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ task.status.label }}
                    </span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        {% if task.priority.value == 'urgent' %}bg-red-100 text-red-800
                        {% elseif task.priority.value == 'high' %}bg-orange-100 text-orange-800
                        {% elseif task.priority.value == 'medium' %}bg-blue-100 text-blue-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ task.priority.label }}
                    </span>
                    {% if task.category %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium"
                              style="background-color: {{ task.category.color }}20; color: {{ task.category.color }}">
                            {{ task.category.name }}
                        </span>
                    {% endif %}
                </div>
            </div>
            <a href="{{ path('app_task_edit', {id: task.id}) }}"
               class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                Modifier
            </a>
        </div>

        <div class="px-6 py-4 space-y-4">
            {% if task.description %}
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Description</h3>
                    <p class="mt-1 text-sm text-gray-900 whitespace-pre-line">{{ task.description }}</p>
                </div>
            {% endif %}

            <div class="grid grid-cols-2 gap-4">
                {% if task.dueDate %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Date d'échéance</h3>
                        <p class="mt-1 text-sm {% if task.overdue %}text-red-600 font-medium{% elseif task.dueToday %}text-orange-600{% else %}text-gray-900{% endif %}">
                            {{ task.dueDate|date('d/m/Y') }}
                            {% if task.overdue %}
                                <span class="text-red-600">(en retard)</span>
                            {% elseif task.dueToday %}
                                <span>(aujourd'hui)</span>
                            {% endif %}
                        </p>
                    </div>
                {% endif %}

                {% if task.completedAt %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Terminée le</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ task.completedAt|date('d/m/Y à H:i') }}</p>
                    </div>
                {% endif %}
            </div>

            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-200">
                <div>
                    <h3 class="text-sm font-medium text-gray-500">Créée le</h3>
                    <p class="mt-1 text-sm text-gray-900">{{ task.createdAt|date('d/m/Y à H:i') }}</p>
                </div>
                {% if task.updatedAt %}
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Modifiée le</h3>
                        <p class="mt-1 text-sm text-gray-900">{{ task.updatedAt|date('d/m/Y à H:i') }}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <form method="post" action="{{ path('app_task_toggle_status', {id: task.id}) }}" class="flex justify-between items-center">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                <span class="text-sm text-gray-500">Changer rapidement le statut :</span>
                <button type="submit"
                        class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                    {% if task.status.value == 'todo' %}
                        Passer en cours
                    {% elseif task.status.value == 'in_progress' %}
                        Marquer terminée
                    {% else %}
                        Remettre à faire
                    {% endif %}
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
