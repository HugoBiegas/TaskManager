{% extends 'base.html.twig' %}

{% block title %}Rechercher - TaskManager{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-lg-8">
        <h1 class="h3 mb-4">
            <i class="bi bi-search text-primary me-2"></i>
            Rechercher
        </h1>

        <div class="card mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_task_search') }}">
                    <div class="input-group">
                        <input type="text"
                               name="q"
                               class="form-control form-control-lg"
                               placeholder="Rechercher dans vos tâches..."
                               value="{{ query }}"
                               autofocus
                               minlength="2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        {% if query|length >= 2 %}
            {% if tasks|length > 0 %}
                <p class="text-muted mb-3">
                    {{ tasks|length }} résultat(s) pour "{{ query }}"
                </p>

                <div class="list-group">
                    {% for task in tasks %}
                        <a href="{{ path('app_task_show', {id: task.id}) }}"
                           class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">{{ task.title }}</h6>
                                    {% if task.description %}
                                        <small class="text-muted">
                                            {{ task.description|length > 100 ? task.description|slice(0, 100) ~ '...' : task.description }}
                                        </small>
                                    {% endif %}
                                </div>
                                <span class="badge bg-{{ task.status.color }}">
                                    {{ task.status.label }}
                                </span>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Aucun résultat</h5>
                    <p class="text-muted">
                        Aucune tâche ne correspond à "{{ query }}"
                    </p>
                </div>
            {% endif %}
        {% elseif query|length > 0 %}
            <div class="alert alert-info">
                Veuillez entrer au moins 2 caractères pour rechercher.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
