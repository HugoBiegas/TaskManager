<!DOCTYPE html>
<html lang="fr" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}TaskManager{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>âœ“</text></svg>">
        <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                theme: {
                    extend: {
                        colors: {
                            primary: {
                                50: '#eef2ff',
                                100: '#e0e7ff',
                                200: '#c7d2fe',
                                300: '#a5b4fc',
                                400: '#818cf8',
                                500: '#6366f1',
                                600: '#4f46e5',
                                700: '#4338ca',
                                800: '#3730a3',
                                900: '#312e81',
                            }
                        }
                    }
                }
            }
        </script>
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="h-full bg-gray-50">
        {% block body %}{% endblock %}

        {% block flash_messages %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="fixed bottom-4 right-4 z-50 animate-fade-in">
                        <div class="rounded-lg p-4 shadow-lg {% if label == 'success' %}bg-green-100 text-green-800{% elseif label == 'error' %}bg-red-100 text-red-800{% elseif label == 'warning' %}bg-yellow-100 text-yellow-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                            <div class="flex items-center">
                                <span>{{ message }}</span>
                                <button type="button" onclick="this.parentElement.parentElement.parentElement.remove()" class="ml-4 text-lg font-bold">&times;</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}
    </body>
</html>
