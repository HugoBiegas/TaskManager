{% extends 'base.html.twig' %}

{% block title %}Inscription - TaskManager{% endblock %}

{% block body %}
<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <div class="text-center">
            <span class="text-5xl">✓</span>
        </div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Créer un compte
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Ou
            <a href="{{ path('app_login') }}" class="font-medium text-primary-600 hover:text-primary-500">
                connectez-vous à votre compte existant
            </a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(registrationForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(registrationForm.firstName, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(registrationForm.firstName, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        <div class="mt-1">
                            {{ form_widget(registrationForm.lastName, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                        </div>
                        {{ form_errors(registrationForm.lastName, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(registrationForm.plainPassword.first, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    <div class="mt-1">
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-primary-500 focus:border-primary-500 sm:text-sm'}}) }}
                    </div>
                    {{ form_errors(registrationForm.plainPassword.second, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                </div>

                <div class="text-xs text-gray-500">
                    Le mot de passe doit contenir au moins 8 caractères, une majuscule, une minuscule et un chiffre.
                </div>

                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded'}}) }}
                    </div>
                    <div class="ml-2 text-sm">
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
                    </div>
                </div>
                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}

                <div>
                    <button type="submit"
                            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors">
                        Créer mon compte
                    </button>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}
