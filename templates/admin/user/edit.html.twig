{% extends '_layout/app.html.twig' %}

{% block title %}Modifier l'utilisateur - Administration{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a href="{{ path('app_admin_users') }}" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700">
            <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Retour à la liste
        </a>
    </div>

    <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="flex items-center">
                {% if user.avatarName %}
                    <img class="h-12 w-12 rounded-full object-cover" src="{{ vich_uploader_asset(user, 'avatarFile') }}" alt="{{ user.fullName }}">
                {% else %}
                    <div class="h-12 w-12 rounded-full bg-primary-100 flex items-center justify-center">
                        <span class="text-primary-700 font-medium text-lg">{{ user.firstName|first|upper }}{{ user.lastName|first|upper }}</span>
                    </div>
                {% endif %}
                <div class="ml-4">
                    <h1 class="text-xl font-semibold text-gray-900">{{ user.fullName }}</h1>
                    <p class="text-sm text-gray-500">Membre depuis le {{ user.createdAt|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
        <div class="px-6 py-4">
            {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        {{ form_label(form.firstName) }}
                        {{ form_widget(form.firstName) }}
                        {{ form_errors(form.firstName) }}
                    </div>
                    <div>
                        {{ form_label(form.lastName) }}
                        {{ form_widget(form.lastName) }}
                        {{ form_errors(form.lastName) }}
                    </div>
                </div>

                <div>
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    {{ form_errors(form.email) }}
                </div>

                <div>
                    {{ form_label(form.plainPassword) }}
                    {{ form_widget(form.plainPassword) }}
                    {{ form_errors(form.plainPassword) }}
                    <p class="mt-1 text-sm text-gray-500">Laissez vide pour conserver le mot de passe actuel.</p>
                </div>

                <div>
                    {{ form_label(form.avatarFile) }}
                    {{ form_widget(form.avatarFile) }}
                    {{ form_errors(form.avatarFile) }}
                </div>

                <div class="space-y-4 p-4 bg-gray-50 rounded-lg">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Rôles</label>
                        {{ form_widget(form.roles) }}
                        {{ form_errors(form.roles) }}
                    </div>

                    <div class="flex items-center">
                        {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded'}}) }}
                        <label for="{{ form.isActive.vars.id }}" class="ml-2 block text-sm text-gray-900">
                            Compte actif
                        </label>
                    </div>
                </div>

                <div class="flex justify-end space-x-3 pt-4">
                    <a href="{{ path('app_admin_users') }}"
                       class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
                        Annuler
                    </a>
                    <button type="submit"
                            class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700">
                        Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
