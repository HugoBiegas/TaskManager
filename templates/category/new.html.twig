{% extends 'base.html.twig' %}

{% block title %}Nouvelle catégorie - TaskManager{% endblock %}

{% block body %}
<div class="mb-4">
    <a href="{{ path('app_category_index') }}" class="text-decoration-none">
        <i class="bi bi-arrow-left me-1"></i>
        Retour aux catégories
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle text-primary me-2"></i>
                    Nouvelle catégorie
                </h4>
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.color) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a href="{{ path('app_category_index') }}" class="btn btn-outline-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>
                            Créer
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
