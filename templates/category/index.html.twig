{% extends '_layout/app.html.twig' %}

{% block title %}Catégories - TaskManager{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Mes catégories</h1>
            <p class="mt-1 text-sm text-gray-500">Organisez vos tâches par catégorie</p>
        </div>
        <a href="{{ path('app_category_new') }}"
           class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700">
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Nouvelle catégorie
        </a>
    </div>

    {% if categories is empty %}
        <div class="bg-white shadow rounded-lg">
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Aucune catégorie</h3>
                <p class="mt-1 text-sm text-gray-500">Créez des catégories pour organiser vos tâches.</p>
                <div class="mt-6">
                    <a href="{{ path('app_category_new') }}"
                       class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700">
                        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        Nouvelle catégorie
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for category in categories %}
                <div class="bg-white shadow rounded-lg overflow-hidden">
                    <div class="p-4" style="border-left: 4px solid {{ category.color }}">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="text-lg font-medium text-gray-900">{{ category.name }}</h3>
                                {% if category.description %}
                                    <p class="mt-1 text-sm text-gray-500">{{ category.description|slice(0, 100) }}{% if category.description|length > 100 %}...{% endif %}</p>
                                {% endif %}
                                <p class="mt-2 text-sm text-gray-500">
                                    {{ category.taskCount }} tâche{{ category.taskCount > 1 ? 's' : '' }}
                                </p>
                            </div>
                            <div class="flex items-center space-x-2">
                                <a href="{{ path('app_category_edit', {id: category.id}) }}" class="text-gray-400 hover:text-gray-500">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                <form method="post" action="{{ path('app_category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button type="submit" class="text-gray-400 hover:text-red-500">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-3">
                        <a href="{{ path('app_task_index', {category: category.id}) }}" class="text-sm text-primary-600 hover:text-primary-700">
                            Voir les tâches &rarr;
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
